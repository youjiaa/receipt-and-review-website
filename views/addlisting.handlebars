<article>
    <h2>Add Your Listing!</h2>
    <form method="POST" action="/addlisting">
        <div class="input-field">
            <label>Name of Apartment or Community</label>
            <input type="text" name="community" size="50">
        </div>
        <div class="input-field">
            <label>Short Description</label>
            <input type="text" name="description" size="60" rows="20">
        </div>
        <div class="input-field">
            <label>Bedrooms</label>
            <input type="number" name="beds">
        </div>
        <div class="input-field">
            <label>Bathrooms</label>
            <input type="number" name="baths">
        </div>
        <div class="input-field">
            <label>Rent Cost (Dollars Per Month)</label>
            <input type="number" name="rent">
        </div>
        <div class= "input-field">
            <label>Rent Cost Division</label>
            <input type="radio" name="div" value="Per Person" checked> Per Person (by the bed) <br>
            <input type="radio" name="div" value="Per Unit"> Per Unit (one payment per unit) <br>
        </div>
        <div class="input-field">
            <label>Address</label>
            <input type="text" name="addr" size="50">
        </div>
        <div class="input-field">
            <label>Your Name</label>
            <input type="text" name="name" size="50">
        </div>
        <div class="input-field">
            <label>Contact Phone</label>
            <input type="text" name="phone">
        </div>
        <div class ="input-field">
            <label>Features (separate with commas)</label>
            <input type="text" name="features" size="50" rows="2">
        </div>
        <div class="input-field">
            <label>Length of Lease</label>
            <input type="radio" name="length" value="Flexible" checked> Flexible
            <input type="radio" name="length" value="10 Months"> 10 Month
            <input type="radio" name="length" value="12 Months"> 12 Month
        </div>
        <br>
        <button type="submit">Post Your Listing!</button>
    </form>
</article>
